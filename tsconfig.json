{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "paths": {
      "@*": ["src/*"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": "./src",
    "strictNullChecks": true,
    "strict": true,
    "target": "ES2020",
    "module": "commonjs",
    "types": ["vitest/globals"]
  },
  "exclude": ["**/dist", "**/demos"]
}
